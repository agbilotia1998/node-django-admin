extends layouts/default

block content
  #list
    h1= title
    #new
      a(href="#{base}/#{path}/new") New

    table
      thead
        tr
          each f in list
            th= fields[f].header || capitalizeFirstLetter(f)
          th
      tbody
        each d in data
          tr
            each f in list
              if fields[f].display
                td= d[f][fields[f].display]
              else
                td= d[f]
            td
              a(href="#{base}/#{path}/#{d._id}/edit") edit

